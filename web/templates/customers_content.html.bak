{{template "base.html" .}}
{{define "content"}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Customers</h1>
    <a href="/customers/new" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> New Customer
    </a>
</div>

<!-- Search -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/customers">
            <div class="row">
                <div class="col-md-10">
                    <input type="text" class="form-control" name="search" value="{{.params.SearchTerm}}" placeholder="Search customers...">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Customers Table -->
<div class="card">
    <div class="card-body">
        {{if .customers}}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .customers}}
                    <tr>
                        <td>{{.CustomerID}}</td>
                        <td>
                            <strong>
                                {{if .CompanyName}}
                                    {{.CompanyName}}
                                {{else}}
                                    {{.FirstName}} {{.LastName}}
                                {{end}}
                            </strong>
                        </td>
                        <td>{{.Email}}</td>
                        <td>{{.PhoneNumber}}</td>
                        <td>{{.City}}</td>
                        <td>
                            <span class="badge bg-secondary">{{.CustomerType}}</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/customers/{{.CustomerID}}" class="btn btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/customers/{{.CustomerID}}/edit" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button class="btn btn-outline-danger" onclick="deleteCustomer({{.CustomerID}})">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h4 class="text-muted">No customers found</h4>
            <p class="text-muted">Add your first customer to get started.</p>
            <a href="/customers/new" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add Customer
            </a>
        </div>
        {{end}}
    </div>
</div>

<script>
function deleteCustomer(id) {
    if (confirm('Are you sure you want to delete this customer?')) {
        fetch(`/customers/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Error deleting customer');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting customer');
        });
    }
}
</script>
{{end}}